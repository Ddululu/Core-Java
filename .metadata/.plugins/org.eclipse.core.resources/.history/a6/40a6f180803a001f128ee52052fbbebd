import java.util.Scanner;

public class opDemo {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.printf("값을 입력하세요 (초 단위)");
		int time = sc.nextInt();
		
		int hour = time /3600;
		int second = time%60;
		
		System.out.printf("%d초는 %d시간 %d초입니다.", time, hour, second );
		
	}

}
